
@{
    Layout = null;
}
@model List<Model.QyJbxxModel>
<table class="layui-table layui-form" lay-skin='nob'>
    <thead>
        <tr>
            <th>企业编号</th>
            <th>企业名称</th>
            <th>联系人</th>
            <th>联系电话</th>
            <th>同步时间</th>
            <th>状态</th>
            <th style="width: 100px;">操作</th>
           
        </tr>
    </thead>

    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.bh</td>
                <td>@item.mc</td>
                <td>@item.dwfzr</td>
                <td>@item.lxdh</td>
                <td>@item.updatetime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                @if (item.sfqy == 0)
                {                   
                    <td><span class="text_status text_status2">已停用</span></td>
                }
                else
                {
                    <td><span class="text_status">已启用</span></td>
                }
                <td class="tooltd">
                    <a class="text_blue" href="javascript:edit(@item.id,'@item.mc','@item.lxdh','@item.dwfzr',@item.sfxstcje,'@item.zh','@item.mm','@item.yybh','@item.bh')">编辑</a>
                    <a class="text_blue" href="javascript:updatestatus(@item.id,@(item.sfqy==0?"1":"0"))">@(item.sfqy == 0?"启用":"停用")</a>
                </td>            
            </tr>
        }
    }
    </table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}
<!-- 分页样式 -->
@(ViewBag.Pager)