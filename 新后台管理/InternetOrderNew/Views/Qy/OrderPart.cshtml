
@{
    Layout = null;
}
@model List<Model.DdjbxxModel>
<table class="layui-table layui-form" lay-skin='nob'>
    <thead>
        <tr>
            <th>医院预登记号</th>
            <th>企业名称</th>
            <th>企业编号</th>
            <th>套餐名称</th>
            <th>套餐价格</th>
            <th>姓名</th>
            <th>性别</th>
            <th>电话</th>
            <th>订单状态</th>
            <th>预约时间</th>         
            <th>操作</th>
        </tr>
    </thead>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.djlsh</td>
                <td>@item.dwmc</td>
                <td>@item.dwbh</td>
                <td>@item.tcmc</td>
                <td>￥@item.tcjg.ToString("0.##")</td>
                <td>@item.xm</td>
                <td>@(item.xb == 1 ? "男" : "女")</td>
                <td>@item.dh</td>
                <td>@item.ddztms</td>
                <td>@item.yykssj.ToString("yyyy-MM-dd")</td>
                <td><a class="text_blue" href="@(Url.Content("~/Qy/OrderDetail")+"?ddbh="+item.ddbh)">查看详情</a> </td>
        </tr>
        }
    }
    </table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}
<!-- 分页样式 -->
@(ViewBag.Pager)