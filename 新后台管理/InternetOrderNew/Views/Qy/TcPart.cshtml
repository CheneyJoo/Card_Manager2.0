
@{
    Layout = null;
}
@model List<Model.XttcbModel>
<table class="layui-table layui-form" lay-skin='nob'>
    <thead>    
        <tr>
            <th>企业编号</th>
            <th>企业名称</th>
            <th>套餐编号</th>
            <th>套餐名称及组合项</th>
            <th>售价</th>
            <th>性别</th>
            <th>婚姻</th>
            <th>结算价</th>            
            <th>同步时间</th>
            <th>启用状态</th>
            <th>操作</th>         
        </tr>      
    </thead>
   @if (Model != null && Model.Count > 0)
   {
       foreach (var item in Model)
       {
        <tr class="">
            <td>@item.dwbh</td>
            <td>@item.dwmc</td>
            <td>@item.tcbh</td>
            <td><a  onclick="getMoreInfo('@(item.yybh)','@item.tcbh','@item.tcmc')" class="text_blue" style="cursor:pointer" >@item.tcmc</a></td>

            <td>@item.jg.ToString("0.##")</td>
            @if (item.xb == 0)
            {
                <td>女</td>
            }
            else if (item.xb == 1)
            {
                <td>男</td>
            }
            else
            {
                <td>通用</td>
            }
            @if (item.hz == 0)
            {
                <td>未婚</td>
            }
            else if (item.hz == 1)
            {
                <td>已婚</td>
            }
            else
            {
                <td>通用</td>
            }
            <td>@item.jsj.ToString("0.##")</td>
            <td>@item.createtime.ToString("yyyy-MM-dd HH:mm:ss")</td>
          
            @if (item.sfqy == 0)
            {
                <td>已停用</td>
            }
            else
            {
                <td><span class="text_status">已启用</span></td>
            }

            <td><a class="text_blue" href="javascript:edit('@item.id','@item.dwmc','@item.tcbh','@item.tcmc','@item.jg','@item.jsj',@item.sfxsjg)">编辑</a> </td>
          
        </tr>
       }
   }
</table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}
<!-- 分页样式 -->
@(ViewBag.Pager)