
@{
    Layout = null;
}
@model List<Model.Wjgz>
<table class="layui-table layui-form" lay-skin='nob'>
    <thead>
    <tr>
        <th>编号</th>
        <th>适用年龄</th>
        <th>性别</th>
        <th>规则名称</th>
        <th>包含标签</th>
        <th>操作</th>
    </tr>
    </thead>

    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.RowNum</td>
                <td>@(item.ZXNL + "~" + item.ZDNL)</td>
                <td>@(item.XB.Equals(1)?"男":"女")</td>
                <td>@item.GZMC</td>
                <td>@item.BQXQ</td>
                <td class="tooltd">
                    <a class="text_blue" href="javascript:;" onclick="del(@item.ID)">删除</a>
                    <a href="javascript:;" class="text_blue" onclick="edit(@item.ID)">编辑</a>
                </td>
            </tr>
        }
    }
</table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}
<!-- 分页样式 -->
@(ViewBag.Pager)
