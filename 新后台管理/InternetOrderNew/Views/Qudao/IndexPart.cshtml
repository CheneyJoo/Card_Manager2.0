
@{
    Layout = null;
}
@model List<Model.QuDaoJbxx>
<table class="layui-table layui-form" lay-skin='nob'>
    <thead>
        <tr>
            <th>Id</th>
            <th>渠道编号</th>
            <th>渠道名称</th>
            <th>联系手机</th>
            <th>对接人</th>
          
            <th>状态</th>
            <th style="width: 100px;">操作</th>
           
        </tr>
    </thead>

    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Bh</td>
                <td>@item.Mc</td>
                <td>@item.Lxdh</td>
                <td>@item.Dwfzr</td>
             
                @if (item.Sfqy == 0)
                {                   
                    <td><span class="text_status text_status2">已停用</span></td>
                }
                else
                {
                    <td><span class="text_status">已启用</span></td>
                }
                <td class="tooltd">
                    <a class="text_blue" href="javascript:edit(@item.Id,'@item.Mc','@item.Lxdh','@item.Dwfzr')">编辑</a>
                    <a class="text_blue" href="javascript:updatestatus(@item.Id,@(item.Sfqy==0?"1":"0"))">@(item.Sfqy==0?"启用":"停用")</a>
                </td>            
            </tr>
        }
    }
    </table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}