
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <style>
        .dataTables_wrapper table tr td { vertical-align: middle; }
        .dataTables_info { float: right; margin-top: 10px; }
        .toolbar { float: left; padding: 0 20px 10px; }
        .dataTables_length { float: left; }
        #jstcmc[readonly] { background-color: #ffffff; }
    </style>
}
<div class="main-content">
    <div class="main-content-inner">
        <input type="hidden" name="yybh" id="yybh" value="@GLYadmin.YYID" />
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
            </script>
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="/home/index">首页</a>
                </li>
                <li>
                    <a href="/group/index">退款管理</a>
                </li>
            </ul>
            <!-- /.breadcrumb -->
        </div>
        <div class="page-content">
            <form class="form-inline" id="form1">
                <div class="row" style="padding-left:20px">

                    <div class="form-group">
                        <label for="groupName">企业名称：</label>
                        <input type="text" class="form-control" id="dwmc" name="dwmc" style="width:200px" placeholder="">
                    </div>
                    <a class="btn btn-primary" onclick="Search()">搜索</a>
                </div>

            </form>
            <div style="margin-top:10px">
                <table id="table1" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>序号</th>
                            <th>医院名称</th>
                            <th>企业名称</th>
                            <th>姓名</th>
                            <th>联系电话</th>
                            <th>支付金额</th>
                            <th>退款金额</th>
                            <th>订单编号</th>
                            <th>退款申请时间</th>
                            <th>支付方式</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>
@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/assets/js/date-time/bootstrap-datetimepicker.min.js"></script>
    <script>
        $.fn.datetimepicker.dates['zh-CN'] = {
            days: ["星期日", "星期一", "星期二", "星期三", "星期四", "星期五", "星期六", "星期日"],
            daysShort: ["日", "一", "二", "三", "四", "五", "六", "日"],
            daysMin: ["日", "一", "二", "三", "四", "五", "六", "日"],
            months: ["一月", "二月", "三月", "四月", "五月", "六月", "七月", "八月", "九月", "十月", "十一月", "十二月"],
            monthsShort: ["一", "二", "三", "四", "五", "六", "七", "八", "九", "十", "十一", "十二"],
            meridiem: ["上午", "下午"],
            //suffix:      ["st", "nd", "rd", "th"],
            today: "今天"
        };

        var language = {
            "sProcessing": "处理中...",
            "sLengthMenu": "显示 _MENU_ 项结果",
            "sZeroRecords": "没有匹配结果",
            "sInfo": "显示第 _START_ 至 _END_ 项结果，共 _TOTAL_ 项",
            "sInfoEmpty": "显示第 0 至 0 项结果，共 0 项",
            "sInfoFiltered": "(由 _MAX_ 项结果过滤)",
            "sInfoPostFix": "",
            "sSearch": "搜索:",
            "sUrl": "",
            "sEmptyTable": "表中数据为空",
            "sLoadingRecords": "载入中...",
            "sInfoThousands": ",",
            "oPaginate": {
                "sFirst": "首页",
                "sPrevious": "上页",
                "sNext": "下页",
                "sLast": "末页"
            }
        };

        var table
        $(function () {
            table = $("#table1").DataTable({
                ajax: {
                    url: "@Url.Action("GetList")",
                    type: "post",
                    data: function (d) {
                        d.dwmc = $("#dwmc").val();
                    }
                },
                processing: true,
                serverSide: true,
                searching: false,
                language: language,
                ordering: false,
                pagingType: "full_numbers",


                columns: [
                   {
                       "data": null, "render": function (data, type, row, meta) {
                           return meta.row + 1;
                       }
                   },
                   { "data": "jgmc" },
                   { "data": "dwmc" },
                   { "data": "xm" },
                   { "data": "dh" },
                   { "data": "ddje" },
                   { "data": "tkje" },
                   { "data": "ddbh" },
                   { "data": "sqtksj" },
                   {
                       "data": "zffs", "render": function (data, type, row, meta) {
                           var html = '';
                           if (row.zffs == "alipay") {
                               html += '支付宝';
                           } else if (row.zffs == "weixin") {
                               html += '微信';
                           }
                           return html;
                       }
                   },
                   {
                       "data": "sfqy", "render": function (data, type, row, meta) {
                           var html = '';
                           if (row.zffs == "alipay") {
                               html += '<button class="btn btn-xs btn-danger" onclick="AliPayRefund(' + row.id + ')">退款</button>';
                           } else if (row.zffs == "weixin") {
                               html += '<button class="btn btn-xs btn-danger" onclick="WeixinRefund(' + row.id + ')">退款</button>';
                           }

                           return html;
                       }
                   }
                ],
                dom: "<'toolbar'>irtlp<'clear'>",
            })
        })

        function Search() {
            table.ajax.reload();
        }


        function AliPayRefund(id) {
            $.ajax({
                url: "@Url.Action("AliPayRefund")",
                data: { id: id },
                dataType: "json",
                type: "post",
                success: function (res) {
                    if (res.code == 200) {
                        window.open(res.url);
                    } else {
                        alert(res.msg);
                    }
                }
            })
        }
        function WeixinRefund(id) {
            $.ajax({
                url: "@Url.Action("WeixinRefund")",
                data: { id: id },
                dataType: "json",
                type: "post",
                success: function (res) {
                    if (res.code == 200) {
                        alert("退款申请成功");
                    } else {
                        alert(res.msg);
                    }
                }
            })
        }


        @*$('#tjkssj,#tjjssj').datetimepicker({
            language: 'zh-CN',
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 1,
            showMeridian: 1,
            minuteStep: 1,
            startDate: '@DateTime.Now.ToString("yyyy-MM-dd")'
        });*@



    </script>
}