
@{
    Layout = null;
}
@model List<Model.DdjbxxModel>
<table class="layui-table layui-form" lay-skin='nob'>
    <thead>
    <tr>
        @if (ViewBag.Zdbz.Equals(3))
        {
            @*<th><input type="checkbox" name="" title="" lay-skin="primary" lay-filter="chkAll" id="idChkAll"></th>*@
        }
        <th>渠道订单号</th>
        <th>渠道名称</th>
        <th>套餐名称</th>
        <th>套餐价格</th>
        <th>姓名</th>
        <th>性别</th>
        <th>电话</th>
        <th>订单状态</th>
        <th>预约时间</th>
        <th>时间段</th>
        <th>医院单号</th>
        <th>操作</th>
    </tr>
    </thead>
    <tbody id="idListBody">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    @if (ViewBag.Zdbz.Equals(3))
                    {
                        @*<td><input type="checkbox" name="" title="" lay-skin="primary" lay-filter="chkSingle" ddbh="@item.ddbh"></td>*@
                    }
                    <td>@item.dsfdd</td>
                    <td>@item.dwmc</td>
                    <td>@item.tcmc</td>
                    <td>￥@item.tcjg.ToString("0.##")</td>
                    <td>@item.xm</td>
                    <td>@(item.xb == 1 ? "男" : "女")</td>
                    <td>@item.dh</td>
                    <td>@item.ddztms</td>
                    <td>@item.yykssj.ToString("yyyy-MM-dd")</td>
                    <td>@item.yykssj.ToString("%H")-@item.yyjssj.ToString("%H")</td>
                    <td>@item.djlsh</td>
                    <td><a class="text_blue" href="@(Url.Content("OrderDetail")+"?ddbh="+item.ddbh)">查看详情</a> </td>
                </tr>
            }
        }
    </tbody>
</table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}
