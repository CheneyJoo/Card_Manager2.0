
@{
    Layout = null;
}
@model List<Model.XtZhbModel>
<table class="layui-table layui-form tbHasCheck" lay-skin='nob'>
    <thead>
    <tr>
        <th>ID</th>
        <th>登录账号</th>
        <th>手机</th>
        <th>角色</th>
        <th>姓名</th>
        <th>创建时间</th>
        <th>状态</th>
        <th>操作</th>
    </tr>
    </thead>

    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.RowNum</td>
                <td>@item.zh</td>
                <td>@item.dh</td>
                <td>@item.jsmc</td>
                <td>@item.lxr</td>
                <td>@item.createtime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                @if (item.zt.Equals(0))
                {
                    <td><span class="text_status text_status2">已停用</span></td>
                }
                else
                {
                    <td><span class="text_status">已启用</span></td>
                }
                <td class="tooltd">
                    @if (item.zt.Equals(0))
                    {
                        <a href="javascript:;" class="text_blue" onclick="updatestatus(@item.id, 1)">启用</a>
                    }
                    else
                    {
                        <a href="javascript:;" class="text_blue" onclick="updatestatus(@item.id, 0)">停用</a>
                    }
                    <a href="javascript:;" class="text_blue" onclick="del(@item.id)">删除</a>
                    <a href="javascript:;" class="text_blue" onclick="edit(@item.id)">编辑</a>
                    <a href="javascript:;" class="text_blue" onclick="reset(@item.id)">密码重置</a>
                </td>
            </tr>
        }
    }
</table>
@if (Model == null || Model.Count == 0)
{
    <div class="data_none"><img src="~/content/assets/images/nothing.png" alt=""></div>
}
<!-- 分页样式 -->
@(ViewBag.Pager)
